<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Kviz.RezultatiInfo">
    <TabbedPage.Children>
        <!-- Tab za rezultate -->
        <ContentPage Title="Rezultati">
            <StackLayout Padding="20">
                <Label Text="Rezultati" FontSize="30" HorizontalOptions="Center" />
                <CollectionView ItemsSource="{Binding Rezultati}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" FontSize="20" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ContentPage>


        <!-- Tab za informacije -->
        <ContentPage Title="Info">
            <StackLayout Padding="20">
                <Label Text="Informacije o aplikaciji" FontSize="30" HorizontalOptions="Center" />
                <Label Text="Verzija aplikacije: 1.0" FontSize="20" HorizontalOptions="Center" />
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>
