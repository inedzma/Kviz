<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kviz.RegistrationPage"
             Title="RegistrationPage">
    <StackLayout>
        <Label 
            Text="Registracija" FontSize="Large"/>
        <Label Text="Ime:" x:Name="emailLabel"/>
        <Entry Placeholder="Unesite vaše ime..." x:Name="email"/>
        <Label Text="Passcode:" x:Name="lozinkaLabel"/>
        <Entry Placeholder="Unesite vaš passcode..." x:Name="lozinka"/>


        <Button Text="Registruj se" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>